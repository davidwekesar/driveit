<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DriveitXml" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/grey_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white_100</item>

        <!-- Custom fonts -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DriveIt.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DriveIt.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DriveIt.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DriveIt.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DriveIt.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DriveIt.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DriveIt.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DriveIt.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DriveIt.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DriveIt.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DriveIt.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.DriveIt.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DriveIt.Overline</item>

        <item name="materialButtonStyle">@style/Widget.driveit.Button</item>
    </style>
</resources>